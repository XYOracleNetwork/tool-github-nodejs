{
  "$schema": "../schema/githublint.schema.json#",
  "github": {
    "enabled": true
  },
  "owners": [
    {
      "name": "*",
      "repositories": [
        {
          "name": "*",
          "raw": {
            "enabled": true
          },
          "branches": [
            {
              "name": "*",
              "content": [
                {
                  "filter": {"path": "buildspec.yml"},
                  "disposition": "required"
                },
                {
                  "filter": {"path": "travis.yml"},
                  "disposition": "required"
                },
                {
                  "filter": {"path": "README.md"},
                  "disposition": "required"
                },
                {
                  "filter": {"path": "sonar-project.properties"},
                  "disposition": "required"
                },
                {
                  "filter": {"path": "githublint.json"},
                  "disposition": "optional"
                }
              ]
            },
            {
              "name": "master"
            }
          ]
        }
      ],
      "languages": [
        {
          "name": "typescript",
          "repositories": [
            {
              "name": "*",
              "branches": [
                {
                  "name": "*",
                  "content": [
                    {
                      "filter": {"path": "tsconfig.json"},
                      "disposition": "required",
                      "detection": true
                    },
                    {
                      "filter": {"path": "tslint.json"},
                      "disposition": "required",
                      "detection": true
                    },
                    {
                      "filter": {"path": "yarn.lock"},
                      "disposition": "required"
                    },
                    {
                      "filter": {"path": "package.json"},
                      "disposition": "required"
                    },
                    {
                      "filter": {"path": "sonar-project.properties"},
                      "disposition": "required"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "name": "kotlin",
          "repositories": [
            {
              "name": "*",
              "branches": [
                {
                  "name": "*",
                  "content": [
                    {
                      "filter": "build.gradle",
                      "disposition": "required",
                      "detection": true,
                      "innertext": "org.jetbrains.kotlin:kotlin-gradle-plugin"
                    },
                    {
                      "filter": {"path": "settings.gradle"},
                      "disposition": "required"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "name": "swift",
          "repositories": [
            {
              "name": "*",
              "branches": [
                {
                  "name": "*",
                  "content": [
                    {
                      "filter": {"path": "Podfile"},
                      "disposition": "required"
                    },
                    {
                      "filter": {"path": "Podfile.lock"},
                      "disposition": "required"
                    },
                    {
                      "filter": {"path": "Gemfile"},
                      "disposition": "required"
                    },
                    {
                      "filter": {"path": "Gemfile.lock"},
                      "disposition": "required"
                    },
                    {
                      "filter": {"path": ".xcworkspace$"},
                      "disposition": "required",
                      "detection": true,
                      "folder": true
                    },
                    {
                      "filter": {"path": ".xcodeproj$"},
                      "disposition": "required",
                      "detection": true,
                      "folder": true
                    },
                    {
                      "filter": {"path": "^fastlane$"},
                      "disposition": "required",
                      "folder": true
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "name": "android",
          "repositories": [
            {
              "name": "*",
              "branches": [
                {
                  "name": "*",
                  "content": [
                    {
                      "filter": {"path": "build.gradle"},
                      "disposition": "required",
                      "detection": true,
                      "innertext": "com.android.tools.build:gradle"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "name": "gradle",
          "repositories": [
            {
              "name": "*",
              "branches": [
                {
                  "name": "*",
                  "content": [
                    {
                      "filter": {"path": "build.gradle"},
                      "disposition": "required",
                      "detection": true
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "name": "react",
          "repositories": [
            {
              "name": "*",
              "branches": [
                {
                  "name": "*",
                  "content": [
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}