{
  "$schema": "../schema/githublint.schema.json#",
  "github": {
    "enabled": true
  },
  "owners": [
    {
      "name": "*",
      "repositories": [
        {
          "name": "*",
          "raw": {
            "enabled": true
          },
          "branches": [
            {
              "name": "*",
              "content": [
                {
                  "filter": "buildspec.yml",
                  "disposition": "required"
                },
                {
                  "filter": "travis.yml",
                  "disposition": "required"
                }
              ]
            },
            {
              "name": "master"
            }
          ]
        }
      ]
    }
  ]
}