{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "githublint.schema.json",
  "additionalItems": false,
  "additionalProperties": false,
  "definitions": {
    "source": {
      "$id": "#definitions/source",
      "additionalProperties": false,
      "title": "Source",
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "filter": {"type": "string"}
      }
    },
    "disposition": {
        "type": "string",
        "enum": ["required", "optional", "disallowed"]
    },
    "branch": {
      "$id": "#definitions/branch",
      "properties": {
        "name": {"type": "string"},
        "enabled": {"type": "boolean"},
        "disposition": {"$ref": "#/definitions/disposition"},
        "protected": {"type": "boolean"},
        "default": {"types": "boolean"}
      }
    },
    "integration": {
      "$id": "#definitions/integration",
      "properties": {
        "name": {"type": "string"},
        "enabled": {"type": "boolean"},
        "disposition": {"$ref": "#/definitions/disposition"}
      }
    },
    "content": {
      "$id": "#definitions/content",
      "properties": {
        "name": {"type": "string"},
        "enabled": {"type": "boolean"},
        "disposition": {"$ref": "#/definitions/disposition"},
        "filter": {"type": "string"}
      }
    },
    "badge": {
      "$id": "#definitions/badge",
      "properties": {
        "name": {"type": "string"},
        "enabled": {"type": "boolean"},
        "disposition": {"$ref": "#/definitions/disposition"}
      }
    },
    "owner": {
      "$id": "#definitions/repository",
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "repositories": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/repository"
          }
        }
      }
    },
    "repository": {
      "$id": "#definitions/repository",
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "enabled": {"type": "boolean"},
        "branches": {"type": "array", "items": {"$ref": "#/definitions/branch"}},
        "integrations": {"type": "array", "items": {"$ref": "#/definitions/integration"}},
        "badges": {"type": "array", "items": {"$ref": "#/definitions/badge"}},
        "content": {"type": "array", "items": {"$ref": "#/definitions/content"}},
        "public": {"type": "boolean"}
      }
    },
    "language": {
      "$id": "#definitions/language",
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "enabled": {"type": "boolean"},
        "branches": {"type": "array", "items": {"$ref": "#/definitions/branch"}},
        "integrations": {"type": "array", "items": {"$ref": "#/definitions/integration"}},
        "public": {"type": "boolean"}
      }
    }
  },
  "type": "object",
  "properties": {
    "$schema": {"type": "string"},
    "additionalProperties": false,
    "github": {"$ref": "#/definitions/source"},
    "owners": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/owner"
      }
    }
  }
}